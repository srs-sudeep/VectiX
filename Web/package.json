    "papaparse": "^5.5.3",
    "react": "^19.1.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-big-calendar": "^1.19.4",
    "react-copy-to-clipboard": "^5.1.0",
    "react-date-range": "^2.0.1",
    "react-day-picker": "8.10.1",
    "react-dom": "^19.1.0",
    "react-helmet": "^6.1.0",
